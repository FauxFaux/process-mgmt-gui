{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2019",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "sourceMap": true,
    "outDir": ".lint/dist",
    "pretty": true,

    "noUnusedLocals": true,
    "noImplicitAny": true,

    /* re-enable this to check our .d.ts files, without which half this codebase is nonsense,
     * and suffer the rest of the spurious errors */
    "skipLibCheck": false,

    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*", "./test/**/*", "./scripts/**/*"],
}
