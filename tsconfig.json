{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "target": "es2020",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "sourceMap": true,
    "outDir": ".lint/dist",
    "pretty": true,

    "noUnusedLocals": true,
    "noImplicitAny": true,

    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*", "./test/**/*", "./scripts/**/*"],
}
